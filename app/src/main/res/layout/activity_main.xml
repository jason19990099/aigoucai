<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <WebView
                android:id="@+id/home_ad_webview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xianshi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:background="@drawable/bg_btn"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/back_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableBottom="@mipmap/close_h"
                android:gravity="center"
                android:textColor="#fff"
                android:visibility="visible" />

            <TextView
                android:id="@+id/home_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableBottom="@mipmap/home_"
                android:gravity="center"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/resh_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableBottom="@mipmap/resh_"
                android:gravity="center"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableBottom="@mipmap/back"
                android:gravity="center"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
